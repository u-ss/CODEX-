{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Antigravity Universal Asset Validation",
  "type": "object",
  "required": [
    "dimension_checks",
    "topology_checks",
    "budget_checks",
    "score",
    "pass",
    "repair_actions"
  ],
  "properties": {
    "dimension_checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "expected", "actual", "tolerance", "pass", "severity"],
        "properties": {
          "name": {"type": "string"},
          "expected": {"type": "number"},
          "actual": {"type": "number"},
          "tolerance": {"type": "number", "minimum": 0.0},
          "pass": {"type": "boolean"},
          "severity": {"type": "string", "enum": ["critical", "major", "minor"]}
        }
      }
    },
    "topology_checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "pass", "detail", "severity"],
        "properties": {
          "name": {"type": "string"},
          "pass": {"type": "boolean"},
          "detail": {"type": "string"},
          "severity": {"type": "string", "enum": ["critical", "major", "minor"]}
        }
      }
    },
    "budget_checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "budget", "actual", "pass", "severity"],
        "properties": {
          "name": {"type": "string"},
          "budget": {"type": "number"},
          "actual": {"type": "number"},
          "pass": {"type": "boolean"},
          "severity": {"type": "string", "enum": ["critical", "major", "minor"]}
        }
      }
    },
    "asset_checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "pass", "detail"],
        "properties": {
          "id": {"type": "string"},
          "pass": {"type": "boolean"},
          "detail": {"type": "string"}
        }
      }
    },
    "design_checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "metric", "scope", "observed", "pass"],
        "properties": {
          "rubric": {"type": "string"},
          "id": {"type": "string"},
          "metric": {"type": "string"},
          "scope": {"type": "string"},
          "metric_space": {"type": "string", "enum": ["srgb", "linear"]},
          "observed": {"type": "number"},
          "expected_min": {"type": ["number", "null"]},
          "expected_max": {"type": ["number", "null"]},
          "weight": {"type": "number"},
          "pass": {"type": "boolean"}
        }
      }
    },
    "design_score": {"type": "number", "minimum": 0.0, "maximum": 100.0},
    "design_pass": {"type": "boolean"},
    "design_threshold": {"type": "number", "minimum": 0.0, "maximum": 100.0},
    "applied_design_rubrics": {
      "type": "array",
      "items": {"type": "string"}
    },
    "score": {"type": "number", "minimum": 0.0, "maximum": 100.0},
    "score_threshold": {"type": "number", "minimum": 0.0, "maximum": 100.0},
    "pass": {"type": "boolean"},
    "repair_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["action", "key"],
        "properties": {
          "action": {"type": "string"},
          "key": {"type": "string"},
          "value": {},
          "min": {"type": "number"},
          "max": {"type": "number"},
          "factor": {"type": "number"},
          "reason": {"type": "string"}
        }
      }
    },
    "notes": {
      "type": "array",
      "items": {"type": "string"}
    },
    "critical_failures": {
      "type": "array",
      "items": {"type": "string"}
    }
  }
}
