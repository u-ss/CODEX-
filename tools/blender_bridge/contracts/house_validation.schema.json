{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "House Validation Result",
  "type": "object",
  "required": [
    "dimension_checks",
    "topology_checks",
    "score",
    "pass",
    "repair_actions"
  ],
  "properties": {
    "dimension_checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "expected", "actual", "tolerance", "pass"],
        "properties": {
          "name": { "type": "string" },
          "expected": { "type": "number" },
          "actual": { "type": "number" },
          "tolerance": { "type": "number", "minimum": 0.0 },
          "pass": { "type": "boolean" },
          "severity": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "topology_checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "pass"],
        "properties": {
          "name": { "type": "string" },
          "pass": { "type": "boolean" },
          "detail": { "type": "string" },
          "severity": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "pass": { "type": "boolean" },
    "repair_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["action", "key"],
        "properties": {
          "action": { "type": "string" },
          "key": { "type": "string" },
          "value": {},
          "min": { "type": "number" },
          "max": { "type": "number" },
          "factor": { "type": "number" },
          "reason": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "notes": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": true
}
